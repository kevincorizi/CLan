<Window x:Name="FileTransferWindow" x:Class="CLanWPFTest.FileTransfer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CLanWPFTest"
        mc:Ignorable="d"
        Title="CLan - Share instantly!" Height="700" Width="900">
    <Window.Background>
        <ImageBrush>
            <ImageBrush.ImageSource>
                <BitmapImage UriSource="images/background.jpg"/>
            </ImageBrush.ImageSource>
        </ImageBrush>
    </Window.Background>


    <Grid x:Name="progressBar" Width="900" Height="650" Visibility="Hidden">
        <ProgressBar Name="sendProgress" HorizontalAlignment="Left" Height="16" Margin="216,326,0,0" VerticalAlignment="Top" Width="468"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="411,396,0,0" VerticalAlignment="Top" Width="74" Click="cancel_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="216,280,0,0" TextWrapping="Wrap" Text="Sending the file..." VerticalAlignment="Top" Width="196" FontSize="18" Foreground="#FF666666"/>
    </Grid>

    


</Window>
