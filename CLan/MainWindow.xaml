<Window x:Name="mainWindow" x:Class="CLan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CLan"
        xmlns:extensions="clr-namespace:CLan.Extensions;assembly=" 
        mc:Ignorable="d"
        Title="CLan - Share instantly!"
        Width="900" Height="700">
        
    
   
    <Window.Background>
        <ImageBrush ImageSource="{extensions:SettingBinding BackgroundPath}" />
    </Window.Background>
    
    <Frame x:Name="_mainFrame" NavigationUIVisibility="Hidden"/>
</Window>